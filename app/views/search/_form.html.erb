<%= form_with url: search_index_url, method: :get do |form| %>

  <div>
    <%= form.label :tag_ids, "タグ" %>
    <%= form.collection_select :tag_ids, tags, :id, :name, {}, { multiple: true } %>
    
    <%= form.label :category_id, "カテゴリ" %>
    <%= form.collection_select :category_id, categories, :id, :name, { prompt: "選択"}  %>
  </div>

  <div>
    <%= form.text_field :words, placeholder: "検索ワード(空白区切り)" %>
  </div>

  <div>
    <%= form.submit "検索", name: nil %>
  </div>
<% end %>
