<%= form_with url: search_index_url, method: :get do |form| %>
  <div>
    <%= form.label :words, "検索ワード(空白区切り)" %>
    <%= form.text_field :words %>

  <div>
    <%= form.collection_select :category_id, categories, :id, :name, prompt: "カテゴリ" %>
  </div>

  <div>
    <%= form.submit "検索", name: nil %>
  </div>
<% end %>
