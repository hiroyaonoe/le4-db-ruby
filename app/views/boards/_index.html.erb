<table border="1">
    <tr>
        <th>タイトル</th>
        <% if !show_users_page? %><th>作成ユーザー</th><% end %>
        <th>作成日時</th>
        <th>コメント数</th>
        <th>カテゴリ</th>
        <th>タグ</th>
    </tr>

    <% boards.each do |board| %>
    <tr>
        <td><%= link_to board.title, board %></td>
        <% if !show_users_page? %><td><%= link_to board.user.name, board.user %></td><% end %>
        <td><%= board.created_at %></a></td>
        <td>TODO: コメント数</td>
        <td><%= board.category.name %></a></td>
        <td>
            <% board.tags.each do |tag| %>
                <%= tag.name %> 
            <% end %>
        </td>
    </tr>
    <% end %>
</table>
